<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE YOUR"
        android:layout_marginTop="15dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:padding="10dp"
        android:background="#8BCFD5"
        android:layout_marginTop="15dp"
        android:textColor="#FBF2EA"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN MINUTES"
        android:layout_marginTop="15dp"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/buttonPickData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATA"
        android:background="#D1C0C0"
        android:textColor="@color/textColor"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected date"
        android:layout_marginTop="20dp"
        android:textColor="#7A7476"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/selectedDateInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/textColor"
        android:textSize="35sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age in minutes"
        android:layout_marginTop="35dp"
        android:textColor="#7A7476"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>